meta {
  name: createTask
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/tasks
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  description: Lots of cleaning has to be done
  title: Clean my room
}

script:post-response {
  if (res.body && res.body.id) {
    bru.setEnvVar("id", res.body.id);
  } else {
    console.error("id not found in the response body");
  }
  
}
